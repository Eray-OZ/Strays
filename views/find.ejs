      <!-- post ad section start -->
      <div class="contact_section">
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <h1 class="banner_taital" style="color: white;">Find<br><span style="color: #980200;">Home</span>
                  </h1>
               </div>
            </div>
            <div class="contact_section_2">
               <div class="row">
                  <div class="col-md-6">
                     <div class="mail_section">

                        <% if (user) { %>

                           <form action="/pet" method="POST">
                              <input type="text" class="mail_text" placeholder="City" name="city">
                              <input type="text" class="mail_text" placeholder="District" name="district">
                              <input type="text" class="mail_text" placeholder="Breed" name="category">
                              <textarea class="massage-bt" placeholder="Description" rows="5" id="description"
                                 name="description" style="color: white;"></textarea>
                              <input type="text" class="mail_text" placeholder="Phone Number" name="number">
                              <input type="text" class="mail_text" placeholder="Address" name="address">
                              <input type="text" class="mail_text" placeholder="Image" name="image">


                              <button type="submit" class="btn btn-lg mt-4"
                                 style="background-color: #980200; color:white;">Send</button>
                           </form>

                           <% } else { %>
                              <a href="/login" class="btn btn-lg mt-4"
                                 style="background-color: #980200; color:white;">You need to
                                 Login first</a>

                              <% } %>

                     </div>
                  </div>
               </div>
