<%- include('partials/_header') %>
   <%- include('partials/_navbar') %>


      <div class="menu_section layout_padding">
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <h1 class="banner_taital">Welcome <br><span style="color: #980200;">
                        <%= user.username %>
                     </span></h1>
               </div>
            </div>


            <% userPets.map(pet=> { %>
               <a>
                  <div class="menu_section_2">
                     <div class="row">
                        <div class="col-md-6 padding_right0">
                           <div class="menu_box">

                              <h1 class="recipe_text">
                                 <%= pet.category %>
                                    <br>
                                    <%= pet.city %> - <%= pet.district %>
                                          <br>
                                          <%= pet.number %>
                                             <br>
                                             <%= pet.address %>
                              </h1>


                              <div class="manu_main">
                                 <div class="img_1"><img src="<%= pet.image %>">
                                 </div>
                              </div>

                              <p class="lorem_text">
                                 <%= pet.description %>
                              </p>


                              <a href="/pet/<%= pet._id %>?_method=DELETE " class=" btn btn-lg mt-4"
                                 style="background-color: #980200; color:white;">Delete</a>


                              <a href="/update/<%= pet._id %>" class=" btn btn-lg mt-4"
                                 style="background-color: #980200; color:white;">Update</a>

                           </div>
                        </div>

                     </div>
                  </div>
               </a>
               <% }) %>

         </div>
      </div>






      <%- include('partials/_footer') %>